---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="he" class="scroll-smooth text-center transition-all" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image" href="/peleg/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>פלג אליקו</title>
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;700;900&family=Open+Sans&family=Varela+Round&display=swap"
      rel="stylesheet"
    />
    <!-- Flowbite -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.css"
      rel="stylesheet"
    />
    <!-- Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <title>{title}</title>
  </head>
  <body class="font-sans">
    <Navbar />
    <div
      class="fixed bottom-4 left-4 z-20 flex flex-col items-center gap-y-1 text-[2.5em] lg:left-10 lg:bottom-10 lg:text-[3em]"
    >
      <a
        href="tel:+972556886041"
        class="z-20 aspect-square w-fit rounded-full bg-blue-500 text-slate-600 transition-all duration-150 hover:scale-105 hover:shadow-2xl"
        ><i class="fa-phone fa-solid aspect-square text-white"></i></a
      >
      <a
        href="https://wa.me/message/RU42NACIRAP6P1"
        class="z-20 aspect-square w-fit rounded-full bg-green-500 text-slate-600 transition-all duration-150 hover:scale-105 hover:shadow-2xl"
        ><i class="fa-whatsapp fa-brands aspect-square text-white"></i></a
      >
    </div>
    <slot />
    <Footer />
    <!-- Flowbite -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.js"
    ></script>

    <!-- Ripple effect -->
    <script
      src="https://unpkg.com/@material-tailwind/html@latest/scripts/ripple.js"
    ></script>
  </body>
</html>
